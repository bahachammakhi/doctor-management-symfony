              <div class="d-flex justify-content-between px-md-1">
                <div class="align-self-center">
                  <i class="far fa-comment-alt text-warning fa-3x"></i>
                </div>
                <div class="text-end">
                  <h3>{{patientsNumber}}</h3>
                  <p class="mb-0">Nombres des patients</p>
                </div>

              </div>
            </div>
          </div>

          </div>

        <div class="col-xl-3 col-sm-6 col-12 mb-4">
        <div class="card">
            <div class="card-body">
              <div class="d-flex justify-content-between px-md-1">
                <div class="align-self-center">
                  <i class="far fa-comment-alt text-warning fa-3x"></i>
                </div>
                <div class="text-end">
                  <h3>{{consultationsNumber}}</h3>
                  <p class="mb-0">Nombres des consultations</p>
                </div>

              </div>
            </div>
        </div>
        </div>
         <div class="col-xl-3 col-sm-6 col-12 mb-4">
        <div class="card">
            <div class="card-body">
              <div class="d-flex justify-content-between px-md-1">
                <div class="align-self-center">
                  <i class="far fa-comment-alt text-warning fa-3x"></i>
                </div>
                <div class="text-end">
                  <h3>{{ordonancesNumber}}</h3>
                  <p class="mb-0">Nombre des Ordonnances</p>
                </div>

              </div>
        </div>
        </div>
</div>
<section class="card-area pb-5">
   <div class="container">
      <div class="row justify-content-center">
         <div class="col-lg-4 col-md-7 col-sm-9">
            <div class="single-card card-style-one">
               <div class="card-image h-25">
